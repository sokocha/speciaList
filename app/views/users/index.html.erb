<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Avatar</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Phone number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= link_to image_tag(user.try(:user_avatar).thumb.url), user.user_avatar.detail.url %></td>
        <td><%= user.address %></td>
        <td><%= user.latitude %></td>
        <td><%= user.longitude %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.id %></td>

        <td><%= link_to 'Show', user %></td>
        <% if can? :update, user %>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <% end %>

        <% if can? :destroy, user %>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, @user %>
  <%= link_to 'New User', new_user_path %>
<% end %>

