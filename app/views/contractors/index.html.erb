<h1>Listing contractors</h1>

<table>
  <thead>
    <tr>
      <th>Hourly Wage</th>
      <th>Certified</th>
      <th>Verified</th>
      <th>User</th>
      <th>Category</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @contractors.each do |contractor| %>
      <tr>
        <td><%= contractor.wage %></td>
        <td><%= contractor.certified %></td>
        <td><%= contractor.verified %></td>
        <!-- <td><%= contractor.user_id %></td> -->

        <% User.where(id: contractor.user_id).each do |user| %>
        <td> <%= user.first_name + ' '+ user.last_name.first+'.'%></td>
        <% end %>

        <% Category.where(id: contractor.category_id).each do |category| %>
        <td> <%= category.name %></td>
        <% end %>

        
        <!-- <td><%= contractor.category_id %></td> -->
        <td><%= link_to 'Show', contractor %></td>
        <td><%= link_to 'Edit', edit_contractor_path(contractor) %></td>
        <td><%= link_to 'Destroy', contractor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

