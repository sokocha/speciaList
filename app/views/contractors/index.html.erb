<h1>Listing contractors</h1>

<% if can? :create, Contractor %>
<% if current_user.contractor.try(:status) == nil  %>
<%= link_to 'Become a Contractor!', new_contractor_path %>
<% end %>
<% end %>
<br/>
<br/>

<table>
  <thead>
    <tr>
      <th>Hourly Wage â‚¦</th>
      <th>Certified</th>
      <th>Verified</th>
      <th>User</th>
      <th>Category</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @contractors.each do |contractor| %>
      <tr>
        <td><%= contractor.wage %></td>
        <td><%= contractor.certified %></td>
        <td><%= contractor.verified %></td>

        <% User.where(id: contractor.user_id).each do |user| %>
        <td> <%= link_to user.first_name ,  contractor %> </td>
        <% end %>

        <% if contractor.category != nil %>
        <td>
          <%= link_to contractor.category.name, category_path(contractor.category) %>
        </td>
        <% else %>
        <td> Not Listed</td>
        <% end %>



        <% if can? :edit, contractor%>
        <td><%= link_to 'Edit', edit_contractor_path(contractor) %></td>
        <% end %>
        <% if can? :destroy, contractor %>
        <td><%= link_to 'Destroy', contractor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>



