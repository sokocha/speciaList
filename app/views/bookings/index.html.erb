<h1>Listing bookings</h1>

<table>
  <thead>
    <tr>
      <th>Listing</th>
      <th>Offer</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.listing_id %></td>
        <td><%= booking.offer_id %></td>
        <td><%= booking.status %></td>
        <td><%= link_to 'Show', booking %></td>
        <% if can? :edit, booking %>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <% end %>
        
        <% if can? :destroy, booking %>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, @booking %>
  <%= link_to 'New Booking', new_booking_path %>
<% end %>
