<h1>Listings</h1>

<% if can? :create, Listing %>
<%= link_to 'New Listing', new_listing_path %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Budget ₦</th>
      <th>Description</th>
      <th>Image</th>
      <th>Status</th>
      <th>Client</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td> <%= link_to listing.title , listing_path(listing)  %> </td>
        <td>₦<%= listing.budget %></td>
        <td><%= listing.description %></td>
        <td><%= listing.image %></td>
        <td><%= listing.status %></td>
        <td><%= link_to listing.user.first_name, user_path(listing.user)  %></td>
        <td><%= listing.category_id %></td>
        <td><%= link_to 'Show', listing %></td>
        <% if can? :edit, listing %>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <% end %>
        <% if can? :destroy, listing %>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


