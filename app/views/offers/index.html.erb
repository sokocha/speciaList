<h1>Listing offers</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Status</th>
      <th>Listing</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.price %></td>
        <td><%= offer.status %></td>
        <td><%= offer.listing_id %></td>
        <td><%= offer.user_id %></td>
        
        <% if can? :edit, offer %>
          <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
        <% end %>
      
        <% if can? :destroy, offer %>
        <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Offer', new_offer_path %>
